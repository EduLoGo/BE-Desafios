<h1 class="text-center p-2 text-bg-info">Bienvenido</h1>
<div class="container col-3">
  <form class="row justify-content-center" id="formLogin" action="/user/login" method="post">
      <div class="mb-3">
        <label for="InputEmail1" class="form-label">Usuario:</label>
        <input type="email" class="form-control" placeholder="Escriba su correo" id="InputEmail1" aria-describedby="emailHelp" name="email"/>
      </div>
      <div class="mb-3">
        <label for="InputPassword" class="form-label">Password:</label>
        <input type="password" class="form-control" placeholder="Escriba su password" id="InputPassword" name="password"/>
      </div>
    <div class="flex-row d-flex justify-content-around ">
      <a type="button" class="btn btn-secondary" href="/user/register">Reg√≠strate</a>
      <button type="submit" class="btn btn-primary">Ingresar</button>
    </div>
    {{#if error}}
      <div class="alert alert-danger m-3" role="alert">
        {{error}}
      </div>
    {{/if}}
    {{#if success}}
      <div class="alert alert-success m-3" role="alert">
        {{success}}
      </div>
    {{/if}}
  </form>
</div>